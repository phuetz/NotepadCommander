<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Bouton primaire -->
    <Style Selector="Button.btn-primary">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style Selector="Button.btn-primary:pointerover">
        <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}" />
    </Style>

    <!-- Boutons toolbar -->
    <Style Selector="Button.btn-toolbar">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style Selector="Button.btn-toolbar:pointerover">
        <Setter Property="Background" Value="{DynamicResource HoverBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
    </Style>
    <Style Selector="Button.btn-toolbar:disabled">
        <Setter Property="Opacity" Value="0.4" />
    </Style>

    <!-- Boutons icone -->
    <Style Selector="Button.btn-icon">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="36" />
    </Style>
    <Style Selector="Button.btn-icon:pointerover">
        <Setter Property="Background" Value="{DynamicResource HoverBrush}" />
    </Style>
    <Style Selector="Button.btn-icon:disabled">
        <Setter Property="Opacity" Value="0.3" />
    </Style>

    <!-- Separateur vertical -->
    <Style Selector="Border.toolbar-separator">
        <Setter Property="Width" Value="1" />
        <Setter Property="Background" Value="{DynamicResource BorderLightBrush}" />
        <Setter Property="Margin" Value="4,8" />
    </Style>

    <!-- Styles ruban -->
    <Style Selector="Button.file-tab">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Padding" Value="12,5" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.file-tab:pointerover">
        <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}" />
    </Style>
    <Style Selector="Button.file-tab.active">
        <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHoverBrush}" />
    </Style>

    <Style Selector="Button.ribbon-quick">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style Selector="Button.ribbon-quick:pointerover">
        <Setter Property="Background" Value="{DynamicResource HoverBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
    </Style>
    <Style Selector="Button.ribbon-quick.compact">
        <Setter Property="Padding" Value="5,4" />
        <Setter Property="MinWidth" Value="26" />
        <Setter Property="MinHeight" Value="24" />
    </Style>

    <Style Selector="Border.ribbon-top-row">
        <Setter Property="Background" Value="{DynamicResource RibbonTopRowBrush}" />
    </Style>
    <Style Selector="Border.ribbon-tab-row">
        <Setter Property="Background" Value="{DynamicResource RibbonTabRowBrush}" />
    </Style>

    <Style Selector="Button.toolbar-tab">
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0,0,0,2" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>
    <Style Selector="Button.toolbar-tab:pointerover">
        <Setter Property="Background" Value="{DynamicResource HoverBrush}" />
    </Style>
    <Style Selector="Button.toolbar-tab.active">
        <Setter Property="Background" Value="{DynamicResource ToolbarBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
    </Style>
    <Style Selector="Button.toolbar-tab.active TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
    </Style>
    <Style Selector="Button.toolbar-tab:pressed">
        <Setter Property="Background" Value="{DynamicResource HoverBrush}" />
    </Style>

    <Style Selector="Border.ribbon-group">
        <Setter Property="Background" Value="{DynamicResource RibbonGroupBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderLightBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,6,8,4" />
        <Setter Property="Margin" Value="0,0,4,0" />
    </Style>

    <Style Selector="TextBlock.ribbon-group-title">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,6,0,0" />
    </Style>

    <Style Selector="Button.toolbar-button">
        <Setter Property="Padding" Value="7,6" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="MinWidth" Value="58" />
        <Setter Property="MinHeight" Value="52" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
    <Style Selector="Button.toolbar-button:pointerover">
        <Setter Property="Background" Value="{DynamicResource HoverBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
    </Style>
    <Style Selector="Button.toolbar-button:pressed">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
    </Style>
    <Style Selector="Button.toolbar-button.accent TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
    <Style Selector="Button.toolbar-button.large">
        <Setter Property="MinWidth" Value="96" />
        <Setter Property="MinHeight" Value="78" />
        <Setter Property="Padding" Value="10,7" />
    </Style>

    <!-- Backstage -->
    <Style Selector="Border.backstage-panel">
        <Setter Property="Background" Value="{DynamicResource BackstagePanelBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
        <Setter Property="BoxShadow" Value="2 0 10 0 #30000000" />
    </Style>
    <Style Selector="Button.backstage-action">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.backstage-action:pointerover">
        <Setter Property="Background" Value="{DynamicResource HoverBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
    </Style>
    <Style Selector="Button.backstage-action.large">
        <Setter Property="MinWidth" Value="190" />
        <Setter Property="MinHeight" Value="74" />
        <Setter Property="Margin" Value="0,0,10,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
    <Style Selector="Button.backstage-nav">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontSize" Value="13" />
    </Style>
    <Style Selector="Button.backstage-nav:pointerover">
        <Setter Property="Background" Value="#30FFFFFF" />
    </Style>
    <Style Selector="Button.backstage-nav.active">
        <Setter Property="Background" Value="#50FFFFFF" />
        <Setter Property="BorderBrush" Value="#70FFFFFF" />
    </Style>
    <Style Selector="Border.backstage-card">
        <Setter Property="Background" Value="{DynamicResource BackstageCardBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="10" />
    </Style>
    <Style Selector="Button.backstage-close">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.backstage-close:pointerover">
        <Setter Property="Background" Value="{DynamicResource HoverBrush}" />
    </Style>

    <!-- Barre d'etat -->
    <Style Selector="Border.status-bar-shell">
        <Setter Property="Background" Value="{DynamicResource StatusBarBrush}" />
    </Style>
    <Style Selector="TextBlock.status-label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style Selector="TextBlock.status-label.strong">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
    <Style Selector="TextBlock.status-label.accent">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0" />
    </Style>
    <Style Selector="Border.status-separator">
        <Setter Property="Width" Value="1" />
        <Setter Property="Height" Value="14" />
        <Setter Property="Background" Value="{DynamicResource StatusSeparatorBrush}" />
        <Setter Property="Margin" Value="4,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style Selector="Border.status-value-pill">
        <Setter Property="Background" Value="{DynamicResource StatusPillBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource StatusPillBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Padding" Value="5,2" />
        <Setter Property="Margin" Value="2,0,0,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</Styles>
