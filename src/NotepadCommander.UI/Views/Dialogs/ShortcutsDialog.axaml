<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="NotepadCommander.UI.Views.Dialogs.ShortcutsDialog"
        Title="Raccourcis clavier"
        Width="500" Height="550"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Border Padding="24" Background="{StaticResource ToolbarBrush}">
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="Raccourcis clavier"
                       FontSize="20" FontWeight="Bold" Margin="0,0,0,16"
                       Foreground="{StaticResource PrimaryBrush}" />

            <Button DockPanel.Dock="Bottom" Content="Fermer"
                    HorizontalAlignment="Center" Margin="0,16,0,0"
                    Classes="btn-primary" Name="CloseButton" Width="120" />

            <ScrollViewer>
                <StackPanel Spacing="4">
                    <!-- Fichier -->
                    <TextBlock Text="Fichier" FontWeight="Bold" FontSize="14" Margin="0,8,0,4" />
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+N" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Nouveau fichier" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+O" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Ouvrir un fichier" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+S" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Enregistrer" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+Shift+S" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Enregistrer sous" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+W" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Fermer l'onglet" /></Grid>

                    <!-- Edition -->
                    <TextBlock Text="Edition" FontWeight="Bold" FontSize="14" Margin="0,12,0,4" />
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+Z" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Annuler" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+Y" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Refaire" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+X" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Couper" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+C" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Copier" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+V" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Coller" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+/" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Commenter/Decommenter" /></Grid>

                    <!-- Recherche -->
                    <TextBlock Text="Recherche" FontWeight="Bold" FontSize="14" Margin="0,12,0,4" />
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+F" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Rechercher" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+H" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Remplacer" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+G" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Aller a la ligne" /></Grid>

                    <!-- Navigation -->
                    <TextBlock Text="Navigation" FontWeight="Bold" FontSize="14" Margin="0,12,0,4" />
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+Tab" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Onglet suivant" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+Shift+Tab" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Onglet precedent" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+1..5" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Onglet du ruban" /></Grid>

                    <!-- Affichage -->
                    <TextBlock Text="Affichage" FontWeight="Bold" FontSize="14" Margin="0,12,0,4" />
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl++" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Zoom avant" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+-" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Zoom arriere" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+0" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Reinitialiser le zoom" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="F11" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Plein ecran" /></Grid>
                    <Grid ColumnDefinitions="200,*"><TextBlock Text="Ctrl+Space" FontWeight="SemiBold" /><TextBlock Grid.Column="1" Text="Auto-completion" /></Grid>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Border>
</Window>
