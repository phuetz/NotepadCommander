<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NotepadCommander.UI.ViewModels"
             x:Class="NotepadCommander.UI.Views.Components.EditToolbar"
             x:CompileBindings="False">

    <StackPanel Orientation="Horizontal" Spacing="4">
        <!-- Groupe Tri -->
        <Border Classes="ribbon-group">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Button Classes="toolbar-button" Command="{Binding SortLinesAscCommand}" ToolTip.Tip="Trier A-Z">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <Viewbox Width="20" Height="20" HorizontalAlignment="Center">
                                <Path Data="M19,17H22L18,21L14,17H17V3H19M2,17H12V19H2M6,5V7H2V5M2,11H9V13H2V11Z"
                                      Fill="{StaticResource TextSecondaryBrush}" />
                            </Viewbox>
                            <TextBlock Text="Trier A-Z" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" Command="{Binding SortLinesDescCommand}" ToolTip.Tip="Trier Z-A">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <Viewbox Width="20" Height="20" HorizontalAlignment="Center">
                                <Path Data="M19,7H22L18,3L14,7H17V21H19M2,17H12V19H2M6,5V7H2V5M2,11H9V13H2V11Z"
                                      Fill="{StaticResource TextSecondaryBrush}" />
                            </Viewbox>
                            <TextBlock Text="Trier Z-A" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" Command="{Binding RemoveDuplicatesCommand}" ToolTip.Tip="Supprimer les doublons">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <Viewbox Width="20" Height="20" HorizontalAlignment="Center">
                                <Path Data="M11,17A1,1 0 0,0 12,18A1,1 0 0,0 13,17A1,1 0 0,0 12,16A1,1 0 0,0 11,17M11,3V7H13V5.08C16.39,5.57 19,8.47 19,12A7,7 0 0,1 12,19A7,7 0 0,1 5,12C5,10.15 5.67,8.46 6.78,7.15L5.37,5.74C3.89,7.41 3,9.6 3,12A9,9 0 0,0 12,21A9,9 0 0,0 21,12A9,9 0 0,0 12,3H11M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9Z"
                                      Fill="{StaticResource TextSecondaryBrush}" />
                            </Viewbox>
                            <TextBlock Text="Doublons" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <TextBlock Classes="ribbon-group-title" Text="Lignes" />
            </StackPanel>
        </Border>

        <Border Classes="toolbar-separator" />

        <!-- Groupe Casse -->
        <Border Classes="ribbon-group">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Button Classes="toolbar-button" Command="{Binding ToUpperCaseCommand}" ToolTip.Tip="MAJUSCULES">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock Text="AB" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="MAJUSCULES" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" Command="{Binding ToLowerCaseCommand}" ToolTip.Tip="minuscules">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock Text="ab" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="minuscules" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" Command="{Binding ToTitleCaseCommand}" ToolTip.Tip="Titre">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock Text="Ab" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="Titre" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <TextBlock Classes="ribbon-group-title" Text="Casse" />
            </StackPanel>
        </Border>

        <Border Classes="toolbar-separator" />

        <!-- Groupe Espaces -->
        <Border Classes="ribbon-group">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Button Classes="toolbar-button" Command="{Binding TrimLinesCommand}" ToolTip.Tip="Rogner les espaces">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <Viewbox Width="20" Height="20" HorizontalAlignment="Center">
                                <Path Data="M3,4H21V8H19V6H5V18H19V16H21V20H3V4M15,13V16L21,12L15,8V11H7V13H15Z"
                                      Fill="{StaticResource TextSecondaryBrush}" />
                            </Viewbox>
                            <TextBlock Text="Rogner" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" Command="{Binding RemoveEmptyLinesCommand}" ToolTip.Tip="Supprimer lignes vides">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <Viewbox Width="20" Height="20" HorizontalAlignment="Center">
                                <Path Data="M9,3V4H4V6H9V7H5V8H9V9H3V10H9V11H5V12H9V13H3V14H9V15H5V16H9V17H3V18H9V19H5V20H9V21H11V3H9Z"
                                      Fill="{StaticResource TextSecondaryBrush}" />
                            </Viewbox>
                            <TextBlock Text="Lignes vides" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <TextBlock Classes="ribbon-group-title" Text="Espaces" />
            </StackPanel>
        </Border>

        <Border Classes="toolbar-separator" />

        <!-- Groupe Commenter -->
        <Border Classes="ribbon-group">
            <StackPanel>
                <Button Classes="toolbar-button" Command="{Binding ToggleCommentCommand}" ToolTip.Tip="Commenter/Decommenter (Ctrl+/)">
                    <StackPanel HorizontalAlignment="Center" Spacing="4">
                        <TextBlock Text="//" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"
                                   Foreground="{StaticResource PrimaryBrush}" />
                        <TextBlock Text="Commenter" />
                    </StackPanel>
                </Button>
                <TextBlock Classes="ribbon-group-title" Text="Code" />
            </StackPanel>
        </Border>

        <Border Classes="toolbar-separator" />

        <!-- Groupe Formater -->
        <Border Classes="ribbon-group">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Button Classes="toolbar-button" Command="{Binding FormatJsonCommand}" ToolTip.Tip="Formater JSON">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock Text="{}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource PrimaryBrush}" />
                            <TextBlock Text="JSON" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" Command="{Binding FormatXmlCommand}" ToolTip.Tip="Formater XML">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock Text="&lt;/>" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource PrimaryBrush}" />
                            <TextBlock Text="XML" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <TextBlock Classes="ribbon-group-title" Text="Formater" />
            </StackPanel>
        </Border>

        <Border Classes="toolbar-separator" />

        <!-- Groupe Encoder -->
        <Border Classes="ribbon-group">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Button Classes="toolbar-button" Command="{Binding EncodeBase64Command}" ToolTip.Tip="Encoder Base64">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock Text="B64" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="Encoder" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" Command="{Binding DecodeBase64Command}" ToolTip.Tip="Decoder Base64">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock Text="B64" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="Decoder" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" Command="{Binding EncodeUrlCommand}" ToolTip.Tip="Encoder URL">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock Text="URL" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="Encoder" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" Command="{Binding DecodeUrlCommand}" ToolTip.Tip="Decoder URL">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock Text="URL" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="Decoder" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <TextBlock Classes="ribbon-group-title" Text="Encoder/Decoder" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
