<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NotepadCommander.UI.ViewModels"
             x:Class="NotepadCommander.UI.Views.Components.ViewToolbar"
             x:DataType="vm:MainWindowViewModel">

    <StackPanel Orientation="Horizontal" Spacing="4">
        <!-- Groupe Zoom -->
        <Border Classes="ribbon-group">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Button Classes="toolbar-button" Command="{Binding ZoomInCommand}" ToolTip.Tip="Zoom avant (Ctrl++)">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <Viewbox Width="20" Height="20" HorizontalAlignment="Center">
                                <Path Data="M15.5,14L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5M9.5,14A4.5,4.5 0 0,0 14,9.5A4.5,4.5 0 0,0 9.5,5A4.5,4.5 0 0,0 5,9.5A4.5,4.5 0 0,0 9.5,14M12,10H10V12H9V10H7V9H9V7H10V9H12V10Z"
                                      Fill="{StaticResource TextSecondaryBrush}" />
                            </Viewbox>
                            <TextBlock Text="Zoom +" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" Command="{Binding ZoomOutCommand}" ToolTip.Tip="Zoom arriere (Ctrl+-)">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <Viewbox Width="20" Height="20" HorizontalAlignment="Center">
                                <Path Data="M15.5,14L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5M9.5,14A4.5,4.5 0 0,0 14,9.5A4.5,4.5 0 0,0 9.5,5A4.5,4.5 0 0,0 5,9.5A4.5,4.5 0 0,0 9.5,14M7,9H12V10H7V9Z"
                                      Fill="{StaticResource TextSecondaryBrush}" />
                            </Viewbox>
                            <TextBlock Text="Zoom -" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" Command="{Binding ZoomResetCommand}" ToolTip.Tip="Reinitialiser le zoom">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock Text="100%" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="Reset" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <TextBlock Classes="ribbon-group-title" Text="Zoom" />
            </StackPanel>
        </Border>

        <Border Classes="toolbar-separator" />

        <!-- Groupe Affichage -->
        <Border Classes="ribbon-group">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Button Classes="toolbar-button" ToolTip.Tip="Retour a la ligne">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <Viewbox Width="20" Height="20" HorizontalAlignment="Center">
                                <Path Data="M18,4H6V2H18V4M18,6H6A2,2 0 0,0 4,8V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8A2,2 0 0,0 18,6M6,8H18V20H6V8Z"
                                      Fill="{StaticResource TextSecondaryBrush}" />
                            </Viewbox>
                            <TextBlock Text="Retour ligne" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" ToolTip.Tip="Numeros de ligne">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock Text="1 2 3" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="Nos lignes" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <TextBlock Classes="ribbon-group-title" Text="Affichage" />
            </StackPanel>
        </Border>

        <Border Classes="toolbar-separator" />

        <!-- Groupe Theme -->
        <Border Classes="ribbon-group">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Button Classes="toolbar-button" ToolTip.Tip="Theme clair">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <Viewbox Width="20" Height="20" HorizontalAlignment="Center">
                                <Path Data="M12,8A4,4 0 0,0 8,12A4,4 0 0,0 12,16A4,4 0 0,0 16,12A4,4 0 0,0 12,8M12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18M20,8.69V4H15.31L12,0.69L8.69,4H4V8.69L0.69,12L4,15.31V20H8.69L12,23.31L15.31,20H20V15.31L23.31,12L20,8.69Z"
                                      Fill="{StaticResource TextSecondaryBrush}" />
                            </Viewbox>
                            <TextBlock Text="Clair" />
                        </StackPanel>
                    </Button>
                    <Button Classes="toolbar-button" ToolTip.Tip="Theme sombre">
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <Viewbox Width="20" Height="20" HorizontalAlignment="Center">
                                <Path Data="M12,18C11.11,18 10.26,17.8 9.5,17.45C11.56,16.5 13,14.42 13,12C13,9.58 11.56,7.5 9.5,6.55C10.26,6.2 11.11,6 12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18M20,8.69V4H15.31L12,0.69L8.69,4H4V8.69L0.69,12L4,15.31V20H8.69L12,23.31L15.31,20H20V15.31L23.31,12L20,8.69Z"
                                      Fill="{StaticResource TextSecondaryBrush}" />
                            </Viewbox>
                            <TextBlock Text="Sombre" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <TextBlock Classes="ribbon-group-title" Text="Theme" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
