<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NotepadCommander.UI.Views.Components.MethodSearchPanel"
             x:CompileBindings="False">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Method names input -->
        <Grid RowDefinitions="Auto,Auto" Margin="4">
            <TextBlock Text="Noms de methodes (un par ligne ou separes par virgule) :"
                       FontSize="10"
                       Foreground="{DynamicResource TextMutedBrush}"
                       Margin="0,0,0,4" />
            <TextBox Grid.Row="1"
                     Name="MethodNamesBox"
                     Watermark="SaveFile, OpenFilePath, LoadContent..."
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="80"
                     FontSize="12" />
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="4,0,4,4" Spacing="4">
            <Button Name="SearchButton"
                    Content="Rechercher"
                    FontSize="11"
                    Padding="8,4"
                    Click="OnSearchClick" />
            <Button Name="GroupButton"
                    Content="Regrouper dans l'editeur"
                    FontSize="11"
                    Padding="8,4"
                    IsEnabled="False"
                    Click="OnGroupClick" />
        </StackPanel>

        <!-- Results tree -->
        <TreeView Grid.Row="2"
                  Name="ResultsTree"
                  FontSize="11"
                  Padding="2"
                  DoubleTapped="OnResultDoubleTapped">
            <TreeView.Styles>
                <Style Selector="TreeViewItem">
                    <Setter Property="IsExpanded" Value="True" />
                </Style>
            </TreeView.Styles>
        </TreeView>

        <!-- Status -->
        <TextBlock Grid.Row="3"
                   Name="StatusText"
                   Text=""
                   FontSize="10"
                   Foreground="{DynamicResource TextMutedBrush}"
                   Padding="6,4"
                   TextTrimming="CharacterEllipsis" />
    </Grid>
</UserControl>
